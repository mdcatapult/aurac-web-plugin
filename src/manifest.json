{
  "name": "Ferret",
  "version": "0.8.2",
  "description": "NER browser extension",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "assets/favicon.ico",
    "default_popup": "index.html?page=popup"
  },
  "background": {
    "page": "index.html?page=background"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "browser-polyfill.min.js",
        "assets/script.js"
      ]
    }
  ],
  "permissions": [
    "tabs"
  ],
  "icons": {
    "48": "assets/Ferret.icon.48.png",
    "128": "assets/Ferret.icon.128.png"
  }
}
